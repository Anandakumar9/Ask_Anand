{
  "name": "studypulse",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "cd backend && .\\venv\\Scripts\\python -m uvicorn app.main:app --reload --port 8001",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:mobile": "cd mobile && flutter run",
    "install:all": "cd backend && pip install -r requirements.txt && cd ../frontend && npm install"
  },
  "scripts-descriptions": {
    "dev": "Run all services (backend + frontend)",
    "dev:backend": "Run backend only on port 8001",
    "dev:frontend": "Run frontend only on port 3000",
    "dev:mobile": "Run Flutter mobile app",
    "install:all": "Install all dependencies"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
