# Production Environment Variables Example
# Copy to .env and fill in your values

# Application
APP_NAME=StudyPulse
DEBUG=False
ENVIRONMENT=production

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_anon_key
SUPABASE_JWT_SECRET=your_jwt_secret

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:password@db.project.supabase.co:5432/postgres

# Security (generate with: python -c "import secrets; print(secrets.token_urlsafe(64))")
SECRET_KEY=CHANGE_THIS_64_CHARACTER_SECRET_KEY
ALGORITHM=HS256

# Redis (Railway addon)
REDIS_URL=redis://default:password@redis.railway.internal:6379

# CORS (your frontend domains, comma-separated, no spaces)
CORS_ORIGINS=https://yourapp.vercel.app,https://yourdomain.com

# Monitoring
SENTRY_DSN=https://key@org.ingest.sentry.io/project

# Ollama
OLLAMA_BASE_URL=https://ollama.railway.app
OLLAMA_MODEL=phi4-mini:3.8b-q4_K_M
RAG_ENABLED=True
